<form action="/login" method="post">

    <h3>Logi sisse</h3>

    <div class="control-group">
        <label class="control-label" for="email">Sinu e-posti aadress</label>
        <div class="controls">
           <input class="span3" type="email" name="email" id="email" value="<%= email %>" required/>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="password">Parool</label>
        <div class="controls">
          <input class="span3" type="password" name="password" id="password" required/>
        </div>
    </div>

    <button type="submit" class="btn">Logi sisse</button>

    <p><small>Oled kaotanud oma parooli? Genereeri uus parool <a href="/reset-link">siin</a></small></p>
</form>
